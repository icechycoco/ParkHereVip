<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41BDEB"
    android:padding="8dp"
    tools:context="com.example.icechycoco.parkherevip.ReserveinfoFragment"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/edittext_bg"
    android:layout_gravity="center"
    android:layout_weight="0.87"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/placeholder5"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESERVE"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/etGuestN"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:drawablePadding="15dp"
            android:hint="Name"
            android:background="@drawable/edittext_bg"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/etGuestS"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:hint="Surname"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/places_ic_search"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/etLicen"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_weight="1.66"
            android:hint="License Plate"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:hint="Mobile No."
            android:inputType="phone"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/etDate"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:hint="Date"
            android:clickable="true"
            android:focusable="false"
            android:editable="false"
            android:inputType="date"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="45dp"
            android:text="Choose time interval "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="17dp" />

        <RadioGroup

            android:id="@+id/radioGroup"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:00 - 12:00" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:00 - 18:00" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:00 - 18:00" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btn_reserve"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:background="#41BDEB"
            android:text="RESERVE"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>


